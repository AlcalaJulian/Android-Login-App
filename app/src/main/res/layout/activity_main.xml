<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#F9F9F9"
    tools:context=".MainActivity">

    <!-- Idioma -->
    <TextView
        android:id="@+id/tv_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="English ▼"
        android:textSize="14sp"
        android:textColor="#808080"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:layout_gravity="end" />

    <!-- Título -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In to recharge Direct"
        android:textSize="22sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal" />

    <!-- Campo de Email -->
    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Enter Email"
        android:paddingStart="16dp"
        android:textColorHint="#A1A1A1"
        android:inputType="textEmailAddress" />

    <!-- Campo de Contraseña -->
    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/rounded_edittext"
        android:hint="●●●●●●●"
        android:paddingStart="16dp"
        android:textColorHint="#A1A1A1"
        android:inputType="textPassword" />

    <!-- Olvidar Contraseña -->
    <TextView
        android:id="@+id/tv_forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recover Password ?"
        android:textSize="12sp"
        android:textColor="#A1A1A1"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="40dp"
        android:layout_gravity="end" />

    <!-- Botón de Iniciar Sesión -->
    <Button
        android:id="@+id/btn_signin"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:text="Sign In"
        android:textColor="#FFFFFF"
        android:backgroundTint="#3F5CFB"
        android:textStyle="bold"
        android:cornerRadius="12dp" />

    <!-- Opción de continuar con -->
    <TextView
        android:id="@+id/tv_or_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Or continue with"
        android:textSize="14sp"
        android:textColor="#808080"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal" />

    <!-- Línea divisoria -->
    <View
        android:layout_width="90dp"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal" />

    <!-- Botones de Redes Sociales -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/ic_google"
            android:layout_marginEnd="20dp" />

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/ic_apple"
            android:layout_marginEnd="20dp" />

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/ic_facebook" />
    </LinearLayout>

    <!-- Crear cuenta -->
    <TextView
        android:id="@+id/tv_create_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="if you don't have an account \nyou can Register here!"
        android:textSize="14sp"
        android:textColor="#3F5CFB"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="40dp" />

</LinearLayout>
